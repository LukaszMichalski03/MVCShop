@model IEnumerable<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Your Products</h1>

<div class="album py-5 bg-light m-5">
    @if (Model == null || !Model.Any())
    {
        <h2>You haven't listed any products</h2>
    }
    else
    {
        <div class="container">

            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            @if (product.Images != null && product.Images.Any() && product.Images.Count > 0)
                            {
                                
                                <img src="@product.Images[0].ImageLink" class="card-img-top" style="height: 225px; width: 100%; display: block;"
                                     alt="Book">
                            }
                            else
                            {
                                <img src="https://photoblobcontainertest.blob.core.windows.net/democontainer1/c76bed9f-4371-4bfc-8276-9da835dc4d85.png" class="card-img-top" style="height: 225px; width: 100%; display: block;"
                                     alt="Book">
                            }
                            <div class="card-body">
                                <p class="card-text">@product.Name</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <form method="post" action="@Url.Action("Delete", "Products")">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='@Url.Action("Edit", "Products", new { id = product.Id })'">Edit</button>
                                        
                                        
                                    </div>
                                    <small class="text-muted">@product.Price zł</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    }
    
</div>