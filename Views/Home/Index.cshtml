@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center m-5">
    <h1 class="display-4 fw-bold">Products</h1>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>

<div class="album py-5 bg-light m-5">
    <div class="container">

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                       
                        @if (product.Images != null && product.Images.Any() && product.Images.Count > 0)
                        {
                            
                            <img  src="@product.Images[0].ImageLink" class="card-img-top" style="height: 225px; width: 100%; display: block;"
                                  alt="Book">
                        }
                        else
                        {
                            <img src="https://photoblobcontainertest.blob.core.windows.net/democontainer1/c76bed9f-4371-4bfc-8276-9da835dc4d85.png" class="card-img-top" style="height: 225px; width: 100%; display: block;"
                                 alt="Book">
                        }
                        <div class="card-body">
                            <p class="card-text">@product.Name</p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">

                                    <button type="button" class="btn btn-sm btn-outline-dark" onclick="location.href='@Url.Action("Details", "Products", new { id = product.Id })'">Details</button>
                                    <form method="post" action="@Url.Action("AddToShoppingCart", "Home")">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">Add to Card</button>
                                    </form>
                                </div>
                                <small class="text-muted">@product.Price zł</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
